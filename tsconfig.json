{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"baseUrl": "./",
		"outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}