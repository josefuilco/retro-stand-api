{
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "src/*": ["src/*"]
      },
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
  },
  "include": [
      "./src/**/*"
  ]
}